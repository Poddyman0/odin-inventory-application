extends layout 

block content 

    h1 #{title} #{item.name}
    p= item.description
    p Do you want to delete this item?

    form(method='POST')
        div.form-group 
            input#itemid.form-control(type='hidden', name='itemid', value=item._id)
        div.form-group
            label(for='password') Admin Password:
            input#password.form-control(type='text', placeholder='Enter Admin Password To Delete Or Update.' name='password' required)    
        button.btn.btn-primary(type='submit') Delete
    if errors
        ul
            for error in errors
                li!= error.msg