extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Category Name:
      input#name.form-control(type='text', placeholder='Enter Category Name.' name='name' required value=(undefined===category ? '' : category.name) )
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text', placeholder='Description of Category.' name='description' required value=(undefined===category ? '' : category.description) )
    div.form-group
      label(for='password') Admin Password:
      input#password.form-control(type='text', placeholder='Enter Admin Password To Delete Or Update.' name='password' required)
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg