extends layout

block content
  p #[strong Name: ] #{item.name}
  p #[strong Description:] #{item.description}
  p #[strong Price:] Â£#{item.price}
  p #[strong Stock:] #{item.numberInStock}
  p #[strong Category: ]
    each val, index in item.category
      a(href=val.url) #{val.name}
      if index < item.category.length - 1
        |,&nbsp;
  
  hr
  p 
    a(href=item.url+'/delete') Delete Item
  p 
    a(href=item.url+'/update') Update Item
